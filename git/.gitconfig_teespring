# This is Git's per-user configuration file.

[core]
	excludesfile = /Users/bogdanvitoc/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

# user
[user]
	name = Bogdan Vitoc
	email = bogdan.vitoc@teespring.com
	signingkey = C37BC07A4475DA60
[credential]
    helper = osxkeychain
[credential "https://github.com"]
    username = bogidon

# lfs
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# editor
[core]
	editor = "'/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl' --wait"

# diff
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

# merge
[merge]
	tool = Kaleidoscope
[mergetool]
	prompt = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true

# ignore/unignore changes to files
[alias]
	hide = update-index --skip-worktree
	unhide = update-index --no-skip-worktree
	unhide-all = ! git hidden | xargs git update-index --no-skip-worktree
	hidden = ! git ls-files -v | grep '^S' | cut -c3-

# interactive rebase up to the point at which your current head branched from <rev>
[alias]
	tofork = "!f() { git rebase -i $(git merge-base --fork-point \"$1\"); }; f"

[alias]
	delallbut = "!f() { git branch | grep -v \"$1\" | rev | cut -c 4- | rev | xargs -L 1 git branch -D; }; f"

# so much color
[color]
	ui = always
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
